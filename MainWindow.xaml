<Window x:Class="STC.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STC.WPF"        
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="STC" Height="800" Width="1269">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!-- Top Bar -->
        <Grid Grid.Row="0" Background="#FFD4D4D4" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="STC. Multilayer Cylinder" VerticalAlignment="Center" Margin="10 0 0 0" Foreground="#FF686868"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <Button x:Name="MinimizeButton"
                        Width="60" 
                        Height="30" 
                        HorizontalAlignment="Right" 
                        Content="—" 
                        BorderBrush="{x:Null}" 
                        Foreground="#FF686868" 
                        Background="{x:Null}"
                        Click="MinimizeButton_Click"/>
                <Button x:Name="CloseButton"
                        Width="60" 
                        Height="30" 
                        HorizontalAlignment="Right" 
                        Content="✕" 
                        BorderBrush="{x:Null}" 
                        Foreground="#FF686868" 
                        Background="{x:Null}"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>
        
        <!-- Main Frame -->
        <Frame Grid.Row="1" 
               Name="MainFrame" 
               Background="#FFF4F4F4"
               NavigationUIVisibility="Hidden"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>

        <!-- Nav Bar -->
        <Grid Grid.Row="2" Background="#FFE8E8E8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Button x:Name="InputUserFormButton"
                        Width="100" 
                        Height="30" 
                        HorizontalAlignment="Right" 
                        Content="Ввод данных" 
                        BorderBrush="{x:Null}" 
                        Foreground="#FF686868" 
                        Background="{x:Null}"
                        Style="{StaticResource ButtonText}"
                        Click="InputUserFormButton_Click"/>
                <Button x:Name="ReferenceUserFormButton"
                        Width="100" 
                        Height="30" 
                        HorizontalAlignment="Right" 
                        Content="Справочник" 
                        BorderBrush="{x:Null}" 
                        Foreground="#FF686868" 
                        Background="{x:Null}"
                        Style="{StaticResource ButtonText}"
                        Click="ReferenceUserFormButton_Click"/>
                <Button x:Name="ReportUserFormButton"
                        Width="100" 
                        Height="30" 
                        HorizontalAlignment="Right" 
                        Content="Отчёт" 
                        BorderBrush="{x:Null}" 
                        Foreground="#FF686868" 
                        Background="{x:Null}"
                        Style="{StaticResource ButtonText}"
                        Click="ReportUserFormButton_Click"/>
            </StackPanel>
            <Button x:Name="AboutUserFormButton"
                    Grid.Column="4"
                    Width="42" 
                    Height="30" 
                    HorizontalAlignment="Right" 
                    Content="STC" 
                    BorderBrush="{x:Null}" 
                    Foreground="#FF686868" 
                    Background="{x:Null}"
                    FontFamily="Bahnschrift Semibold Condensed"
                    FontSize="16"
                    Click="AboutUserFormButton_Click"/>
        </Grid>
    </Grid>
</Window>
